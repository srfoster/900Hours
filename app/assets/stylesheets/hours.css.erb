.add_note_buttons{
  width: 350px; 
  float:left;
}

.hour_notes_container{
  /*background-image: url('<%= asset_path 'notes_bg.png' %>');*/
  margin-top: 22px;
  width: 321px;
  padding: 20px;
  float: left;
  overflow: hidden;
}

.chart_container{
  background-image: url('<%= asset_path 'chart_bg.png' %>');
  width: 469px;
  height: 500px;
  float: left;
}

.hour_info_container{
  margin-top: 20px 
}

.hour_notes_list{
  width: 320px;
}

.hour_note_list_item{
  margin-top: 10px;
  width: 320px;
  float: left;
  position: relative;
}

.hour_note_list_item .user_icon{
  width: 45px;
  border: 1px solid white;
  float: left;
  margin-right: 10px;
}

.hour_note_list_item .delete_icon{
  position: absolute;
  width: 20px;
  height: 20px;
  right: -1px;
  top: 5px;
  cursor: pointer;
}


.hour_notes_list .note_text{
  display: inline;
  float: left;
  width: 240px ;
  cursor: pointer;
}

.hour_notes_list .note_text:hover{
  display: inline;
  float: left;
  width: 240px ;
  cursor: pointer;
  color: #dcb0fe;
}

#chart{
  width: 220px;
  position: relative;
  top:140px; 
  left:30px; 
  float: left;
}

.donor_list{
  position: relative;
  top:140px; 
  left:30px; 
  float: left;
}

.donor_list img{
  width: 30px;
  border: 1px solid white;
}

.donor_name{
  position: relative;
  top: -10px;
}

.connecting_line{
  border: 3px solid white;
  position: absolute;
  height: 92px;
  width: 0px;
  margin-top: -45px;
  margin-left: 320px;
}

.full_note_text{
  background-color: black;
  color: white;
  padding: 50px;
  width: 500px;
  text-align: left; 
  overflow: hidden;
}

.full_note_text .user_icon{
  border: 1px solid white;
  width: 100px;
  height: 100px;
  float: left;
  margin-right: 10px;
}

.full_note_text .edit_icon{
  display: block;
  width: 30px;
  height: 30px;
  margin-top: 10px;
  cursor: pointer;
}

