#mission_statement{
  color: #8f00fd;
}

#mission_statement h1{
  font-size: 19pt;
  text-align: center;
}

.emph{
  color: white;
}

.content_item{
}

.content_item h2{
  color: white;
  text-align: center;
  padding-top: 20px;
  font-size: 24pt;
  margin-bottom: 0px;
}

.content_item_content{
  width: 960px;
  height: 400px;
  background-image: url('<%= asset_path "paint_splash.png" %>');
}

.left_column{
  width: 400px;
  height: 200px;
  position: relative;
  top: 130px;
  left: 100px;
  float: left;
}

.right_column{
  width: 350px;
  height: 200px;
  position: relative;
  top: 110px;
  left: 100px;
  float: left;
  margin-left: 30px;
}

#paypal_button{
  margin-top: 98px;
  margin-left: 160px;
  width: 150px;
  height: 60px;
}

#paypal_button img{
  width: 100%;
  height: 100%;
}

.left_column h3{
  color:white;
  font-size: 60pt;
  margin: 0px 0px 0px 0px;
}

.left_column p{
  color: #8f00fd;
  font-size: 20pt;
  margin: 20px 0px 0px 0px;
}

#inplace_login p{
  color: white;
}

#inplace_login{
  background-color: black;    
  padding: 40px; 
}

#thank_you{
  background-color: black;    
  padding: 40px; 
  width: 500px;
}

#thank_you a{
  color: #8f00fd;
}

#donation_amount_widget{
  display:inline;
  margin-right: 20px;
  font-size: 20pt;
}


#donation_amount_widget input{
  background-color: black; 
  border: 0px solid;
  border-bottom: 1px solid #8f00fd;
  font-size: 20pt;
  color: white;
}

#donation_amount_widget input:focus{
    outline-width: 10px;
    outline-color: #8f00fd;
}

#donation_submit_widget{
  display:inline;
  margin-right: 20px;
  position: relative;
  top: 8px;
}

#donation_submit_widget img{
  width: 90px;
  cursor: pointer;
}

#feedback{
  display:none;
}

#made_by_you{
  color: white;
  font-size: 16pt;
}

#made_by_you a{
  color: white;
}

/* Mission */

.row img{
    float: left;
    width: 500px;
}

.row .row_text{
    float: left;
    width: 330px;
    margin-right: 20px;
}


.infographic{
  width: 500px;
}

.row_text h3{
  color: #8f00fd;
}
