}

.personal_info .about_me p{
    
}

.about_me_text{
  width: 100%;
  float:left;
}

.newsfeed{
   width: 855px;
   float: left;
   margin-top: 40px;
   overflow: hidden;
}

.hour_details{
   background-image: url('<%= asset_path "hour_details_bg.png" %>');
