.personal_info{
   overflow: hidden;
}

.personal_info .profile_pic{
   width: 350px; 
   height: 360px; 
   float: left;
   background-image: url('<%= asset_path "profile_picture_bg.png" %>');
}

.personal_info .profile_pic .photo{
   width: 269px;
   height: 272px;
   position: absolute;
   top: 75px;
   left: 79px;
   z-index: 0;
}

.personal_info .profile_pic .hours{
   width: 100px;
   height: 88px;
   background-image: url('<%= asset_path "profile_picture_hours_bg.png" %>');
   text-align: center;
   font-size: 20pt;
   padding-top: 12px;
   position: absolute;
   z-index: 1;
}

.personal_info .profile_pic .name{
   width: 198px;
   height: 34px;
   background-image: url('<%= asset_path "profile_picture_name_bg.png" %>');
   text-align: center;
   font-size: 20pt;
   padding-top: 4px;
   position: absolute;
   top: 329px;
   left: 170px;
   z-index: 1;
}

.personal_info .about_me {
   float: left;
   margin-left: 50px;    
   width: 450px;
}

.personal_info .badges {
   width 100%;   
}

.about_me h3{
   width: 100%;
   float: left;
}


.personal_info .badges .badge{
   background: #000000; /* Old browsers */
   background: -moz-linear-gradient(top, #8f00fd 21%, #000000 65%); /* FF3.6+ */
   background: -webkit-gradient(linear, left top, left bottom, color-stop(21%,#8f00fd), color-stop(65%,#000000)); /* Chrome,Safari4+ */
   background: -webkit-linear-gradient(top, #8f00fd 21%,#000000 65%); /* Chrome10+,Safari5.1+ */
   background: -o-linear-gradient(top, #8f00fd 21%,#000000 65%); /* Opera 11.10+ */
   background: -ms-linear-gradient(top, #8f00fd 21%,#000000 65%); /* IE10+ */
   background: linear-gradient(to bottom, #8f00fd 21%,#000000 65%); /* W3C */
   filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#8f00fd', endColorstr='#000000',GradientType=0 ); /* IE6-9 */
  border-radius: 30px; 
  -moz-border-radius: 30px; 
  -webkit-border-radius: 30px; 
  border: 3px solid #FFFFFF;
  padding: 10px;
  float: left;
  width: 150px;
  margin-right: 10px;
  text-align: center;
}

